@using PROJECT.Models
@model PROJECT.Models.product
@{
    ViewBag.Title = "detail";
    myDatabaseEntities fe = new myDatabaseEntities();
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>Furniture Town</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">
    <!-- styles -->
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <!--<link href="~/Content/bootstrap.css" rel="stylesheet" />-->
    <link href="~/Content/bootstrap-responsive.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-responsive.min.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.css" rel="stylesheet" />
    <link href="~/Content/shop-homepage.css" rel="stylesheet" />
    <link href="~/Content/style.css" rel="stylesheet" />

    <link href="~/Content/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
    <!-- jQuery -->
    <script src="~/Scripts/slider/jquery.js"></script>
    <script src="~/Scripts/js/bootstrap.min.js"></script>
    <!-- <script src="~/Scripts/js/bootstrap.js"></script>-->
    <script src="~/Scripts/js/jquery.easing-1.3.min.js"></script>
    <!-- <script src="~/Scripts/js/jquery.js"></script>-->
    <script src="~/Scripts/js/jquery.scrollTo-1.4.3.1-min.js"></script>
    <script src="~/Scripts/js/shop.js"></script>
    <script src="~/Scripts/jquery.js"></script>
    <script src="~/Scripts/js/bootstrap-dropdown.js"></script>
</head>
<body>


    <!-- Navigation -->
    <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <div class="container">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>

            </div>
            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav pull-left">
                    <li>
                        <a href="/Home/Index">Home</a>
                    </li>
                    <li>
                        <a href="/Home/About">About</a>
                    </li>
                    <li>
                        <a href="/Home/Contact">Contact Us</a>
                    </li>


                    <li>
                        <div style="margin-top:6px">
                            <form action="/Home/Search" class="navbar-search">
                                <input type="text" name="search" placeholder="Search By Name" class="search-query "><span><button type="submit" class="shopBtn ">search</button></span>
                            </form>
                        </div>
                    </li>
                    <li>
                        <div style="margin-top:6px">
                            <form action="/Home/Search2" class="navbar-search">
                                <input type="number" name="search2" min="1" placeholder="Search By Price" class="search-query span2"><span><button type="submit" class="shopBtn ">search</button></span>
                            </form>
                        </div>

                    </li>

                </ul>

                <ul class="nav navbar-nav pull-right">
                    <li>
                        <a href="/Home/Shopping">Shopping Cart</a>

                    </li>

                    @{if (Session["uname"] != null)
                    {
                        <li>
                            <a href="/Home/Logout">Logout</a>
                        </li>
                    }}

                    @{if (Session["uname"] == null)
                    {
                        <li class="dropdown">
                            <a data-toggle="dropdown" class="dropdown-toggle" href="#"><span class="icon-lock"></span> Login <b class="caret"></b></a>
                            <div class="dropdown-menu">
                                <form action="/Home/LoginApprove" class="form-horizontal loginFrm">
                                    <div class="control-group">
                                        <input type="text" class="span2" id="inputEmail" placeholder="Username" name="user">
                                    </div>
                                    <div class="control-group">
                                        <input type="password" class="span2" id="inputPassword" name="pass" placeholder="Password">
                                    </div>
                                    <br />
                                    <center>
                                        <button type="submit" class="shopBtn ">Sign in</button>
                                    </center>
                                </form>
                            </div>
                        </li>
                    }}

                    @{if (Session["uname"] == null)
                    {
                        <li>
                            <a href="/Home/Register">Register</a>
                        </li>
                    }}
                </ul>
            </div>
            <!-- /.navbar-collapse -->
        </div>
        <!-- /.container -->
    </nav>

    <!-------------------------------------------------------------------------------------------------------------------------------------->

    <div class="container">

        <header id="header">
            <div class="row">
                <div class="span4">
                    <a class="logo" href="index.html">
                        <img src="~/images/logo-social.png" width="350" height="100" alt="">
                    </a>
                </div>
            </div>

        </header>
    </div>



    <!-- Page Content -->
    <div class="container">

        <div class="row">

            <div class="col-md-3">
                <h1 style=" font-family:'Segoe UI' ;color: #713a05">CATEGORIES</h1>
                <div class="list-group">
                    @foreach (category cat in fe.categories.ToList())
                    {

                        <a href="/Home/CategoryView/@cat.Id" class="list-group-item"><h3>@cat.name</h3></a>


                    }

                </div>
            </div>
            @{string url = "~/Files/" + Model.Id + "_0.jpg";}
            <div class="col-md-9">
                <div class="well well-small">
                    <div class="row-fluid">
                        <div class="span5">
                            <!---<img src=@Url.Content(url) style="width:100%; border:groove" />-->
                            <div id="myCarousel" class="carousel slide cntr">
                                <div class="carousel-inner">
                                    <div class="item active">
                                        <a href="#"> <img src=@Url.Content(url) alt="" style="width:100%"></a>
                                    </div>
                                    <div class="item">
                                        <a href="#"> <img src=@Url.Content(url) alt="" style="width:100%"></a>
                                    </div>
                                    <div class="item">
                                        <a href="#"> <img src=@Url.Content(url) alt="" style="width:100%"></a>
                                    </div>
                                </div>
                                <a class="left carousel-control" href="#myCarousel" data-slide="prev">‹</a>
                                <a class="right carousel-control" href="#myCarousel" data-slide="next">›</a>
                            </div>
                        </div>
                        <div class="span7">
                            <h3>@Model.name [RS @Model.price]</h3>
                            <hr class="soft" />

                            <form action="/Home/AddToCart" class="form-horizontal qtyFrm">
                                @Html.HiddenFor(m => m.Id)
                                @Html.HiddenFor(m => m.name)
                                @Html.HiddenFor(m => m.cat_id)
                                @Html.HiddenFor(m => m.price)
                                @Html.HiddenFor(m => m.desc)
                                @Html.HiddenFor(m => m.image)

                                <div class="control-group">
                                    <div class="controls">
                                        <input name="quan" type="number" min="1" class="span6" required placeholder="Qty." style="width:50px">
                                    </div>
                                </div>

                                <br />
                                <h4>DESCRIPTION</h4>
                                <p>
                                    @Model.desc
                                <p>
                                    <button type="submit" class="shopBtn"><span class=" icon-shopping-cart"></span> Add to cart</button>
                            </form>
                        </div>
                    </div>

                </div>
            </div>
        </div>

    </div>
    <footer class="footer" style="margin-bottom:1px">
        <div class="row-fluid">
            <p class="pull-left">
                <a href="#"><img src="~/images/fb.png" style="width:50px" alt=""></a>
                <a href="#"><img src="~/images/twitter.png" style="width:50px" alt=""></a>
                <a href="#"><img src="~/images/insta.png" style="width:50px" alt=""></a>
            </p>
            <p class="pull-right">
                <a href="#"><img src="~/images/maestro.png" alt="payment"></a>
                <a href="#"><img src="~/images/mc.png" alt="payment"></a>
                <a href="#"><img src="~/images/pp.png" alt="payment"></a>
                <a href="#"><img src="~/images/visa.png" alt="payment"></a>
                <a href="#"><img src="~/images/disc.png" alt="payment"></a>
            </p>


        </div>
    </footer>


</body>
</html>

