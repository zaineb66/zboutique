@model PROJECT.Models.customer
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/menu_shared.cshtml";
}

                        

    <!-------------------------------------------------------------------------------------------------------------------------------------->

    <div class="container">

        <header id="header">
            <div class="row">
                <div class="span4">
                    <a class="logo" href="index.html">
                        <span></span>
                        <img src="~/images/logo-social.png" width="350" height="100" alt="">
                    </a>
                </div>

               
            </div>
        </header>
        <div id="checking">Checking...</div>
        <div class="span9">

            <h1> Registration</h1>
            <hr class="soft" />
            <div class="well">
                <form class="form-horizontal" action="/Home/RegisterCust" method="post">
                    <h1>Your Personal Details</h1>
                    <br />
                    <div class="control-group">
                        <label class="control-label" for="inputFname">Name <sup>*</sup></label>
                        <div class="controls">
                            <input type="text" id="UserName" name="name" required> <h1>  </h1><input type="button" class="btn btn-success" id="b1" value="Check" />
                        </div>
                        <!---------------------------------------------------------------------------------------------------------->

                        <div id="result"></div>
                        @Scripts.Render("~/bundles/jquery")
                        <script>

                            $(document).ready(function () {

                                $('#checking').hide();

                                $('#b1').click(function () {

                                    var userName = $('#UserName').val();

                                    //alert('User Name ='+ userName);
                                    $('#checking').show();
                                    $.getJSON("/home/CheckUserName?UserName=" + userName, function (data) {
                                        $('#checking').hide();
                                        if (data) {
                                            $('#result').text("User already exists in database");

                                        }
                                        else {
                                            $('#result').text("User Name is available");
                                        }
                                    });

                                });

                            });
                        </script>
                        <!--------------------------------------------------------------------------------------------------------->

                    </div>

                    <div class="control-group">
                        <label class="control-label" for="inputLname">Password<sup>*</sup></label>
                        <div class="controls">
                            <input type="password" id="inputLname" name="password" data-val-required="Password field is required">
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label" for="inputEmail">Address <sup>*</sup></label>
                        <div class="controls">
                            <input type="text" name="address" data-val-required="this field is required">
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label" for="inputEmail">Postal Code <sup>*</sup></label>
                        <div class="controls">
                            <input type="number" name="postcode" data-val-required="this field is required">
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label" for="inputEmail">Email <sup>*</sup></label>
                        <div class="controls">
                            <input id="email" type="email" name="email" required>
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label"> Phone No<sup>*</sup></label>
                        <div class="controls">
                            <input type="number" name="phone" required>
                        </div>
                    </div>
                    <p> </p>
                    <div class="control-group">
                        <div class="controls">
                            <input type="submit" name="submitAccount" value="Register" class="exclusive shopBtn">
                        </div>
                    </div>
                </form>

            </div>
            </div>

        </div>
        

